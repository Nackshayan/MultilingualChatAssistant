<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F5FB">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Multilingual Chat Assistant"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="#1F1A2B"
                android:paddingBottom="10dp" />

            <!-- 1) Incoming -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:strokeColor="#E7E2F5"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Incoming message"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#1F1A2B" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusBottomEnd="14dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etIncoming"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Paste or type the message you received"
                            android:minLines="3"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:textColor="#1F1A2B"
                            android:textColorHint="#847C95" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAnalyzeTranslate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Analyze &amp; Translate"
                            app:cornerRadius="14dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSpeakIncoming"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:text="Speak"
                            app:cornerRadius="14dp"
                            style="?attr/materialButtonOutlinedStyle" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 2) Detection / Translation -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:strokeColor="#E7E2F5"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detection &amp; Translation"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#1F1A2B" />

                    <!-- Keep your existing IDs -->
                    <TextView
                        android:id="@+id/tvDetectedLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Detected: -"
                        android:textSize="13sp"
                        android:textColor="#4A3B66" />

                    <TextView
                        android:id="@+id/tvTranslatedForUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Translation appears here…"
                        android:textSize="14sp"
                        android:textColor="#1F1A2B"
                        android:background="#F2EEFF"
                        android:padding="12dp" />

                    <!-- Tone selector -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tone"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#1F1A2B" />

                        <Spinner
                            android:id="@+id/spTone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 3) Compose reply -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:strokeColor="#E7E2F5"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your reply"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#1F1A2B" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusBottomEnd="14dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etReply"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Type what you want to say…"
                            android:minLines="2"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:textColor="#1F1A2B"
                            android:textColorHint="#847C95" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnGenerateReply"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Generate &amp; Save Reply"
                            app:cornerRadius="14dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSpeakReply"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:text="Speak"
                            style="?attr/materialButtonOutlinedStyle"
                            app:cornerRadius="14dp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 4) Output preview -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:strokeColor="#E7E2F5"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Result"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#1F1A2B" />

                    <!-- Keep your existing ID -->
                    <TextView
                        android:id="@+id/tvDetectedToneIntent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Intent: -  •  Tone: -"
                        android:textSize="13sp"
                        android:textColor="#4A3B66" />

                    <TextView
                        android:id="@+id/tvReplyPreviewUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Reply meaning (English) appears here…"
                        android:textSize="14sp"
                        android:textColor="#1F1A2B"
                        android:background="#F2EEFF"
                        android:padding="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvReplyPreviewSend"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Reply to send appears here…"
                            android:textSize="13sp"
                            android:textColor="#1F1A2B" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopyReply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copy"
                            style="?attr/materialButtonOutlinedStyle"
                            app:cornerRadius="14dp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 5) GIF -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:strokeColor="#E7E2F5"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="GIF"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#1F1A2B" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GIF only in history"
                                android:textSize="12sp"
                                android:textColor="#4A3B66"
                                android:layout_marginEnd="8dp" />

                            <Switch
                                android:id="@+id/switchGifOnly"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnGenerateGif"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Generate GIF"
                            style="?attr/materialButtonOutlinedStyle"
                            app:cornerRadius="14dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopyGif"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:text="Copy GIF Link"
                            style="?attr/materialButtonOutlinedStyle"
                            app:cornerRadius="14dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivGifPreview"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginTop="12dp"
                        android:scaleType="centerCrop"
                        android:background="#EFEAFB"
                        android:contentDescription="GIF preview" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 6) History -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:strokeColor="#E7E2F5"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="History"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#1F1A2B" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClearHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clear"
                            style="?attr/materialButtonOutlinedStyle"
                            app:cornerRadius="14dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvHistory"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- bottom spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
